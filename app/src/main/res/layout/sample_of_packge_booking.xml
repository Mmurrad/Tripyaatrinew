<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Name :"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sample_of_name_id"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Email :"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sample_of_email_id"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Phone :"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sample_of_phone_id"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Starting Location :"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sample_of_starting_id"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:text="Location Visit :"
                android:textSize="@dimen/_15ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sample_of_visit_id"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Person :"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/_17ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sample_of_person_id"
                android:layout_height="match_parent"></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>